<Page
    x:Class="UniAli.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="UniAli: Qwen1.5-1.7B" 
                   FontSize="20" Margin="10" HorizontalAlignment="Center"/>

        <!-- История чата -->
        <win2d:CanvasControl Grid.Row="1" x:Name="ChatCanvas"
                             Draw="ChatCanvas_Draw"
                             ClearColor="Transparent"/>

        <!-- Панель ввода -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox" PlaceholderText="Введите сообщение..."
                     IsEnabled="{x:Bind IsInputEnabled, Mode=OneWay}"/>

            <Button Grid.Column="1" Content="➤" 
                    Click="SendButton_Click" Margin="10,0,0,0"
                    IsEnabled="{x:Bind IsInputEnabled, Mode=OneWay}"/>
        </Grid>

        <ProgressBar Grid.Row="2" IsIndeterminate="True" 
                     Visibility="{x:Bind IsGenerating, Mode=OneWay}"/>
    </Grid>
</Page>